<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="msq.inok.bel.belhunt">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>


    <application
        android:name="msq.inok.bel.belhunt.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="msq.inok.bel.belhunt.ui.activities.MainActivity"
                  android:theme="@style/Theme.AppCompat.NoActionBar">

            <!--
                      <intent-filter>
                      <action android:name="android.intent.action.MAIN"/>

                      <category android:name="android.intent.category.LAUNCHER"/>
                  </intent-filter>
            -->
        </activity>

        <receiver
            android:name="msq.inok.bel.belhunt.widget.widgets.WeatherWidget"
            android:icon="@drawable/ic_launcher_background"
            android:label="@string/laber_widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/weather_widget_info"/>
        </receiver>
        <receiver
            android:name="msq.inok.bel.belhunt.widget.widgets.MyProvider">
            <intent-filter>
                <action
                    android:name="android.appwidget.action.APPWIDGET_UPDATE">
                </action>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_metadata">
            </meta-data>
        </receiver>

        <activity android:name="msq.inok.bel.belhunt.ui.activities.StartActivity"
                  android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name="msq.inok.bel.belhunt.services.WeatherIService"
            android:exported="false">
        </service>
        <service
            android:name="msq.inok.bel.belhunt.widget.factories.MyService"
            android:enabled="true"
            android:exported="true">

        </service>
    </application>

</manifest>